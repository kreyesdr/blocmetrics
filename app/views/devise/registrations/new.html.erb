<div class="login_page">

  <div class="login_page_wrapper">
    <div class="md-card" id="login_card">
      <div class="md-card-content large-padding" id="register_form">
        <h2 class="heading_a uk-margin-medium-bottom">Create an account</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="uk-form-row">
              <label for="register_username">Email</label>
              <%= f.email_field :email, class: 'md-input', autofocus: true %>
            </div>
            <div class="uk-form-row">
              <label for="register_password">Password</label>
              <%= f.password_field :password, class: 'md-input', autocomplete: "off" %>
            </div>
            <div class="uk-form-row">
              <label for="register_password_repeat">Repeat Password</label>
              <%= f.password_field :password_confirmation, class: 'md-input', autocomplete: "off" %>
            </div>
            <div class="uk-margin-medium-top">
              <%= f.submit 'Sign up', class: 'md-btn md-btn-primary md-btn-block md-btn-large' %>
            </div>
            </div>
            </div>
        <% end %>
        <div class="uk-margin-top uk-text-center">
          <%= link_to 'Already a member?', new_user_session_path %>
        </div>
        </div>
</div>