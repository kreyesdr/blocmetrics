<div class="page-signup">
  <div class="wrapper">
    <div class="main-body">
      <div class="body-inner">
        <div class="card bg-white">
          <div class="card-content">
            <section class="logo text-center">
              <h1>BlocMetrics</h1>
            </section>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <form class="form-horizontal">
                  <fieldset>
                    <div class="form-group">
                      <div class="ui-input-group">
                        <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email address' %>
                        <span class="input-bar"></span>
                      </div>
                    </div>
                  </fieldset>
                  <div class="card-action no-border text-right">
                    <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary btn-block btn-block' %>
                  </div>
                </form>
                </div>
            <% end %>
            </div>
      </div>
    </div>
  </div>
</div>

