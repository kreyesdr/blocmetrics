<div class=" sidebar_main_open sidebar_main_swipe">
  <!-- main header -->
  <%= render 'main/partials/header' %>
  <!-- main header end -->

  <!-- main sidebar -->
  <%= render 'main/partials/sidebar' %>
  <!-- main sidebar end -->
  <div id="page_content">
    <div id="page_content_inner">
      <h2 class="heading_b uk-margin-bottom">Create Application Form
      </h2>
      <div class="md-card">
        <div class="md-card-content">
          <h1><%= @application.name %></h1>
          <p><%= @application.description %></p>
          <%= @application.event.each do |ev| %>
            <%= ev.name %>,
          <% end %>
          <%= pie_chart @application.event.group(:name).count %>
        </div>
      </div>
    </div>
  </div>
</div>
