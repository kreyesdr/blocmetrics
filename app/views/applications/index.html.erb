<div class=" sidebar_main_open sidebar_main_swipe">
  <!-- main header -->
  <%= render 'main/partials/header' %>
  <!-- main header end -->

  <!-- main sidebar -->
  <%= render 'main/partials/sidebar' %>
  <!-- main sidebar end -->
  <div id="page_content">
    <div id="page_content_inner">
      <h3 class="heading_b uk-margin-bottom">Applications
        <%= link_to 'Create New Application', new_application_path, class: 'md-btn md-btn-primary pull-right' %></h3>
      <div class="md-card uk-margin-medium-bottom">
        <div class="md-card-content">
          <div class="uk-overflow-container">
            <table class="uk-table uk-table-nowrap">
              <thead>
              <tr>
                <th class="uk-width-1-10 uk-text-center">User Image</th>
                <th class="uk-width-2-10">User Creator</th>
                <th class="uk-width-2-10 uk-text-center">Application Name</th>
                <th class="uk-width-2-10 uk-text-center">Date Created</th>
                <th class="uk-width-1-10 uk-text-center">Status</th>
                <th class="uk-width-2-10 uk-text-center">Actions</th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <% @application.each do |app| %>
                    <td class="uk-text-center"><%= image_tag 'avatars/avatar_01_tn.png', class: 'md-user-image' %></td>
                    <td><%= app.user.email %></td>
                    <td class="uk-text-center"><%= app.name %></td>
                    <td class="uk-text-center"><%= app.created_at.strftime("%d %b. %Y") %></td>
                    <td class="uk-text-center"><span class="uk-badge uk-badge-primary">Accepted</span>
                    </td>
                    <td class="uk-text-center">
                      <%= link_to edit_application_path(app) do %>
                          <i class="md-icon material-icons">&#xE254;</i>
                      <% end %>
                      <%= link_to app, method: :delete do %>
                          <i class="md-icon material-icons">&#xE14C;</i>
                      <% end %>
                    </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
          </div>
          <ul class="uk-pagination uk-margin-medium-top">
            <li class="uk-disabled"><span><i class="uk-icon-angle-double-left"></i></span></li>
            <li class="uk-active"><span>1</span></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><span>&hellip;</span></li>
            <li><a href="#">10</a></li>
            <li><a href="#"><i class="uk-icon-angle-double-right"></i></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>